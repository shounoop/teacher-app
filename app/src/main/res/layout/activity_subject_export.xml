<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Subject.SubjectExportActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="20sp"
        android:text="@string/TitleSubject"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/subjectTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/tableborder">

        <!-- Table Heading -->
        <TableRow android:background="@color/white">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/tableborder"
                android:gravity="center|center_horizontal"
                android:text="@string/firstName"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"

                android:background="@drawable/tableborder"
                android:gravity="center|center_horizontal"
                android:padding="5sp"
                android:text="@string/HKEditSubject"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/tableborder"
                android:gravity="center|center_horizontal"
                android:padding="5sp"
                android:text="@string/NHEditSubject"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/tableborder"
                android:gravity="center|center_horizontal"
                android:padding="5sp"
                android:text="@string/HSEditSubject"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </TableRow>
    </TableLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnExport"
        style="@style/button_style"
        android:background="@drawable/button_background_1"
        android:text="@string/ExportSubject" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Btn_ExportCancel"
        style="@style/button_style"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_background_5"
        android:text="@string/Cancel" />
</LinearLayout>